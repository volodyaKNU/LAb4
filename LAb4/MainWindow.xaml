<Window x:Class="LAb4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Animals" Height="450" Width="800">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Додати тварину" Padding="10" Grid.Column="0" Grid.RowSpan="2" Margin="0,0,12,0">
            <StackPanel VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Вид:" VerticalAlignment="Center" Width="60"/>
                    <ComboBox x:Name="cbType" Width="150" SelectedIndex="0">
                        <ComboBoxItem Content="Dog"/>
                        <ComboBoxItem Content="Cat"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Вік:" VerticalAlignment="Center" Width="60"/>
                    <TextBox x:Name="txtAge" Width="150" Text="5"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="lblExtra" Text="Порода / тип шерсті:" VerticalAlignment="Center" Width="150"/>
                    <TextBox x:Name="txtExtra" Width="150" />
                </StackPanel>

                <Button x:Name="btnAdd" Content="Додати" Width="120" Click="btnAdd_Click"/>
                <Separator/>
                <Button x:Name="btnAvg" Content="Середній вік > 5 років" Width="180" Click="btnAvg_Click"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Тварини" Padding="10" Grid.Column="1" Grid.RowSpan="2" Margin="0,0,12,0">
            <ListBox x:Name="lbAnimals" DisplayMemberPath="AnimalType" />
        </GroupBox>

        <GroupBox Header="Дії" Padding="10" Grid.Column="2" Margin="0,0,0,12">
            <StackPanel>
                <Button Content="Їсти" Click="BtnEat_Click"/>
                <Button Content="Спати" Click="BtnSleep_Click"/>
                <Button Content="Вивести паспортні дані" Click="BtnId_Click"/>
                <Button Content="Дані собаки (порода)" Click="BtnDogInfo_Click"/>
                <Button Content="Результати огляду кішки" Click="BtnCatCheckup_Click"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Вивід" Padding="10" Grid.Column="2" Grid.Row="1">
            <TextBox x:Name="txtOutput" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        </GroupBox>
    </Grid>
</Window>
